<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wangguilong.microweibo.ui.activity.home.MainActivity">

   <FrameLayout
       android:id="@+id/framelayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="49dp"
       />


   <LinearLayout
       android:id="@+id/tab"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_alignParentBottom="true"
       android:weightSum="5"
       android:background="@color/white">

      <LinearLayout
          android:id="@+id/tab_home_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center">

         <ImageView
             android:id="@+id/home_image"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/home_selector" />

         <TextView
             android:id="@+id/home_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="微博"
             android:textSize="10sp"
             android:textColor="@drawable/color_selector"
             />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/tab_message_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center">

         <ImageView
             android:id="@+id/message_image"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/msg_selector" />

         <TextView
             android:id="@+id/message_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="消息"
             android:textSize="10sp"
             android:textColor="@drawable/color_selector"
             />
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center">

         <ImageView
             android:id="@+id/tab_compose_image"
             android:layout_width="44dp"
             android:layout_height="44dp"
             android:src="@drawable/compose_selector" />


      </LinearLayout>

      <LinearLayout
          android:id="@+id/tab_discover_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center">

         <ImageView
             android:id="@+id/discover_image"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/discover_selector" />

         <TextView
             android:id="@+id/discover_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="发现"
             android:textSize="10sp"
             android:textColor="@drawable/color_selector"
             />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/tab_profile_linear"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center">

         <ImageView
             android:id="@+id/profile_image"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/profile_selector" />

         <TextView
             android:id="@+id/profile_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我"
             android:textSize="10sp"
             android:textColor="@drawable/color_selector"
             />
      </LinearLayout>
   </LinearLayout>


</RelativeLayout>
