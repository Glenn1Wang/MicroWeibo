<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">
    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/camera_selector"
                android:layout_marginLeft="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="首页"
                android:layout_centerInParent="true"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/scan_selector"
                android:layout_marginRight="13dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.example.wangguilong.microweibo.view.shimmer.ShimmerRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shimmer_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_demo_layout="@layout/layout_sample_view"
        app:shimmer_demo_shimmer_color="#73ffffff"
        android:overScrollMode="never"
        >

    </com.example.wangguilong.microweibo.view.shimmer.ShimmerRecyclerView>
</LinearLayout>