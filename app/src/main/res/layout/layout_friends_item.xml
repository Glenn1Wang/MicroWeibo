<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="2dp"
   >

    <com.example.wangguilong.microweibo.view.circularimage.CircularImageView
        android:id="@+id/head_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="13dp"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_image"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friends_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试账号"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/friends_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="描述111111111111dsdsdsddasd11"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="13dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/friends_follow_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_follow1"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/friends_follow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已关注"/>

    </LinearLayout>

</RelativeLayout>